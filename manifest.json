{
  "manifest_version": 3,
  "name": "Base64 Decoder",
  "description": "Decode Base64 instantly when loading a page.",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "clipboardWrite",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Base64 Decoder"
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}